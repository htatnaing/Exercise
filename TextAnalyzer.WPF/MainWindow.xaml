<Window x:Class="TextAnalyzer.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Exercise" Height="500" Width="480"
    xmlns:views="clr-namespace:TextAnalyzer.WPF.View">
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="460*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="180"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>
        <Border CornerRadius="3" BorderBrush="SteelBlue" BorderThickness="1" Grid.Row="0">
            <Label Height="30" Width="400" Content="Below is a two way binding between the view view-model, and model"/>
        </Border>
        <Border CornerRadius="3" BorderBrush="SteelBlue" BorderThickness="1" Grid.Row="1" Margin="0,5,0,0">
            <views:TextEditorView/>
        </Border>
        <Border CornerRadius="3" BorderBrush="SteelBlue" BorderThickness="1" Grid.Row="2" Margin="0,5,0,0">
            <views:ReportView/>
        </Border>
    </Grid>
</Window>
