<UserControl x:Class="TextAnalyzer.WPF.View.TextEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto"
             DataContext="{Binding Path=TextEditorViewModel,Source={StaticResource ViewModelLocator}}">
    <StackPanel Orientation="Vertical" Margin="4">
        <!--Here is where we the view gets a copy to the ViewModel Declaratively-->
        
        <StackPanel Orientation="Vertical" DataContext="{Binding Path=TextEditor, Mode=TwoWay}" Margin="4">
            <StackPanel Orientation="Horizontal">
                <Label Content="Enter Text:" Margin="0,0,4,0"/>
                <TextBox Width="301" Text="{Binding Path=Text}" Height="125"/>
            </StackPanel>
        </StackPanel>
        <StackPanel>
            <Button Content="Calculate" HorizontalAlignment="Right" Width="80" Command="{Binding Path=SaveTextEditorCommand}"/>
        </StackPanel>
    </StackPanel>
    
</UserControl>
